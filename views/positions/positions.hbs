<div class="container-fluid text-black text-center card text-white bg-dark mb-3
" style="max-width: 540px;">
<h1>Jobs I applied to:</h1>
</div >


{{#each positions}}
    <div class="container-fluid text-light text-start" style="max-width: 540px" >
        <section class="positions">

        <div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img style="max-width: 150px"src="../images/logo-navbar.png" class="align-item-center img-fluid rounded-start" alt="ninjalogo">
    </div>
    <div class="cards text-white bg-dark col-md-8">
      <div class="card-body text-white bg-dark">
        <h3 class="card-title text-light"><b>{{this.title}}</b></h3>
        <p class="card-text text-light"><b>Company:</b> {{company.name}} <br />
            <b>Job description:</b> {{description}} <br />
            <b>Salary wish:</b> {{salarywish}} <br />
            <b>My rating:</b> {{this.jobrating}} <br />
        </p>
        <p class="card-text"><small class="text-body-secondary">{{timestamps}}</small></p>
      </div class="cards ">
          <a class="btn more-details mt-3 mx-3 text-light " href="/positions/{{this._id}}">More details</a>
        <a class="btn edit mt-3 mx-1 text-light" href="/positions/{{this._id}}/edit">Edit</a>
        <form  method="POST" action="/positions/{{_id}}/delete">
            <button class="btn btn-danger mt-3 mx-3 mb-3 text-light">Delete</button>
        </form>
    </div>
  </div>
</div>
</div>
    </section>
{{/each}}

